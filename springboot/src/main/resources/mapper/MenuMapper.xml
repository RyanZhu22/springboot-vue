<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace指向mapper.xml所对应的Mapper接口-->
<mapper namespace="com.example.springboot_restful.mapper.MenuMapper">
    <insert id="saveOrUpdate" parameterType="com.example.springboot_restful.entity.Menu">
        <choose>
            <when test="id == null">
                INSERT INTO sys_menu (pid, menu_name, menu_path, icon, description)
                VALUES (#{pid}, #{menu_name},#{menu_path},#{icon}, #{description})
            </when>
            <otherwise>
                UPDATE sys_menu
                SET pid = #{pid},
                menu_name = #{menu_name},
                menu_path = #{menu_path},
                icon = #{icon},
                description = #{description}
                where id = #{id}
            </otherwise>
        </choose>
    </insert>

    <delete id="removeById" parameterType="int">
        DELETE FROM sys_menu
        where id = #{id}
    </delete>

    <select id="getById" parameterType="int" resultType="com.example.springboot_restful.entity.Menu">
        SELECT * FROM sys_menu
        where id = #{id}
    </select>

    <select id="totalCount" resultType="int">
        SELECT count(*) from sys_menu
    </select>

    <select id="findPage" parameterType="com.example.springboot_restful.entity.Menu" resultType="com.example.springboot_restful.entity.Menu">
        SELECT * from sys_menu
        LIMIT #{pageNum}, #{pageSize}
    </select>

    <select id="findAll" resultType="com.example.springboot_restful.entity.Menu">
        SELECT * from sys_menu
    </select>
</mapper>